<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/activity_photo_show_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/title_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewer_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_vector_back" />

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="13dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_image_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cbx_layout_photo_show_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择"
                android:textColor="@android:color/white"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_checked_select"
                android:drawablePadding="5dp"
                android:button="@null"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


</LinearLayout>
