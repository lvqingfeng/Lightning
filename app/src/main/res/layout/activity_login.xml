<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lightningfast.ui.activity.LoginActivity">
        <com.lightningfast.view.BackView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="登录"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:fitsSystemWindows="true"
                android:background="@color/BaseColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/logo"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />
                </LinearLayout>
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:maxLength="11"
                    android:id="@+id/login_username"
                    style="@style/LoginEditTextStyle"
                    android:inputType="numberSigned"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_vector_gray_person"
                    android:hint="请输入账号" />
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/plain"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/login_password"
                    android:maxLength="16"
                    style="@style/LoginEditTextStyle"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_vector_password"
                    android:inputType="textPassword"
                    android:hint="请输入密码" />
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/plain"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <Button
                    android:id="@+id/btn_login"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_white_rectangle"
                    android:text="登\u3000录"
                    android:textColor="@color/textBlueColor"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/forget_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="忘记密码?"
                        android:textColor="@color/white_background"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="注册账号"
                        android:textColor="@color/white_background"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/employee_login"
                        android:text="©2017闪电快金融"
                        android:textColor="@color/plain"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>
